# Kafka image tag for Kafka controllers/brokers
KAFKA_IMAGE_TAG=latest

# Kafka UI image tag (provectuslabs/kafka-ui)
KAFKA_UI_TAG=latest

# KRaft Cluster ID (stable; do not change after formatting)
CLUSTER_ID=5L6g3nShT-eMCtK--X86sw

# External hostname/domain for advertised.listeners (outside-Docker clients)
KAFKA_EXTERNAL_HOST=localhost

# Controller JVM heap (metadata quorum)
KAFKA_HEAP_OPTS="-Xms1G -Xmx1G"

# Broker JVM heap (client traffic, replication)
KAFKA_BROKER_HEAP_OPTS="-Xms2G -Xmx2G"

# Allow auto-creation of topics (false recommended for production)
KAFKA_AUTO_CREATE_TOPICS_ENABLE=false